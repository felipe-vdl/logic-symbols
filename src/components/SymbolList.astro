---
import SymbolItem from "./SymbolItem.astro";
import type { Symbol } from "./SymbolItem.astro";

export type SymbolListProps = {
  title: string;
  symbols: Symbol[];
};

type Props = SymbolListProps;

const { title, symbols } = Astro.props;
---

<div class="flex flex-col border border-light-4 rounded">
  <h3 class="text-light-2 text-3xl font-semibold border-b border-light-4 p-3">
    {title}
  </h3>
  <div class="p-6 grid gap-6 grid-cols-5 md:grid-cols-8">
    {
      symbols.map((item) => (
        <SymbolItem symbol={item.symbol} description={item.description} />
      ))
    }
  </div>
</div>
<style>
  @import url("https://fonts.googleapis.com/css2?family=Source+Serif+4:ital,opsz,wght@0,8..60,200..900;1,8..60,200..900&display=swap");

  html {
    font-family: "Source Serif 4", serif;
  }
</style>
